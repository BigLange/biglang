<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fff"
        android:orientation="horizontal">
        <View
            android:id="@+id/cc_view_color"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="#000"/>

        <TextView
            android:id="@+id/cc_item_class_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textColor="#000"
            android:text="shopClass"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/cc_item_biaoti"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:text="一条标语用三年 &gt;"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/cc_list_item_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/classimg"
        />

    <GridView
        android:id="@+id/cc_item_grid"
        android:numColumns="4"
        android:layout_width="match_parent"
        android:layout_height="50dp">
    </GridView>



</LinearLayout>