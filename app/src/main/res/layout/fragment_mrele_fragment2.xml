<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lang.big.biglang.fragment.MreleFragment2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="1dp"
            android:background="#fff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:text="宝贝的分类"
                android:textColor="#000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/mrele_frag2_classification_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#0000"
                android:drawableRight="@drawable/down_next"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:paddingRight="5dp"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="特色标签(选填)"
            android:textColor="#000"
            android:textSize="16sp"
            android:padding="20dp"
            android:background="#fff" />

        <GridView
            android:id="@+id/mrele_frag2_label_grid"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#fff"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:listSelector="@drawable/mrele_frag2_label_grid_item_style"
            android:layout_marginBottom="1dp"></GridView>
        <EditText
            android:id="@+id/mrele_fragment2_describe_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="随便写点什么吧..."
            android:maxLines="10"
            android:minLines="3"
            android:textSize="14sp"
            android:textColor="#000"
            android:background="#fff"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#fff"/>

        <LinearLayout
            android:id="@+id/mrele_next_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/mrele_fragment2_up_next_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#cdcdcd"
                android:text="上一步">

            </Button>
            <Button
                android:id="@+id/mrele_fragment2_down_next_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#FF472d"
                android:text="下一步">

            </Button>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
