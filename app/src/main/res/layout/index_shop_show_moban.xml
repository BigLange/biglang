<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.lang.big.biglang.MyView.CircleView
            android:id="@+id/sp_hand_img"
            android:layout_marginLeft="10dp"
            android:padding="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/sp_name_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="名字"
            android:textStyle="bold"
            android:textColor="#000"/>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/index_shop_show_img1"
            android:layout_marginLeft="20dp"
            android:layout_width="100dp"
            android:src="@drawable/yxy"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/index_shop_show_img2"
            android:layout_marginLeft="20dp"
            android:src="@drawable/yxy"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <ImageView
            android:id="@+id/index_shop_show_img3"
            android:layout_marginLeft="20dp"
            android:src="@drawable/yxy"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/sp_price_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textSize="20dp"
        android:textColor="#F95229"
        android:text="￥18"/>

    <TextView
        android:id="@+id/sp_introduce_txt"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="随便写点什么,随便写点是随便写点是随便写点是随便写点是随便写点是"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:drawableLeft="@drawable/dizhi_logo"
            android:scaleType="fitXY"
            android:id="@+id/sp_address_txt"
            android:background="@drawable/address_show_style"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="长沙|雨花"
            android:layout_height="20dp"
            android:gravity="center"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/sp_xy_img"
            android:src="@drawable/xihuan_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"/>
        <TextView
            android:id="@+id/sp_xy_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:text="9"/>
        <ImageView
            android:id="@+id/sp_ly_img"
            android:src="@drawable/liuyan_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="3dp"/>
        <TextView
            android:id="@+id/sp_ly_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginRight="3dp"
            android:text="2"/>
    </LinearLayout>

</LinearLayout>