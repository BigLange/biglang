<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textColor="#ffffff"

    >

    <LinearLayout
        android:layout_weight="0.1"
        android:background="#ff0000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_quit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/textView12"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="注册"
            android:textColor="#ffffff"
            android:gravity="right|center"
            android:layout_marginRight="20dp"
            android:id="@+id/tv_register" />

    </LinearLayout>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:id="@+id/imageView8"
        android:src="@drawable/login_logo"
        android:layout_alignBottom="@+id/edt_pwd"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edt_username"
            android:hint="请输入用户名"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="请输入密码"
            android:id="@+id/edt_pwd"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/edt_username"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/hide"
            android:id="@+id/imageView9"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:layout_alignTop="@+id/edt_pwd"
            android:layout_alignEnd="@+id/edt_pwd" />


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登  录"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:id="@+id/btn_login"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textColor="#000000"
        android:id="@+id/tv_forgetpwd"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_weight="0.19" />

    <LinearLayout
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
      >

        <TextView
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#C0C0C0"
            android:id="@+id/textView15"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="使用第三方登录"
            android:id="@+id/textView14"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_weight="0.5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#C0C0C0"
            android:id="@+id/textView16"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
          />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="-70dp"
            android:id="@+id/imageView"
            android:src="@drawable/qqlogin"
            android:layout_weight="0.06" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:src="@drawable/wxlogin"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.06" />

        <ImageView
            android:layout_marginLeft="-70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@drawable/wblogin"
            android:layout_gravity="right"
            android:layout_weight="0.06" />

    </LinearLayout>



</LinearLayout>