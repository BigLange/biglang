<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageButton
            android:id="@+id/cc_back_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/yxy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/cc_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:gravity="center"
                android:text="好货,你淘不尽"
                android:textColor="#fff"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/cc_txt_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="#80ffffff"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:drawableLeft="@drawable/wenhao"
                android:text="搜你想要的" />

        </LinearLayout>
    </RelativeLayout>
    <GridView
        android:id="@+id/cc_head_img_grid"
        android:numColumns="4"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:background="#fff"></GridView>
</LinearLayout>