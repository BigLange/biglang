<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lang.big.biglang.fragment.CassificationFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ListView
            android:background="#fff"
            android:divider="#EEE"
            android:dividerHeight="20dp"
            android:id="@+id/cc_main_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

        <LinearLayout
            android:id="@+id/cc_select_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="#fff"
            android:orientation="vertical">


            <Button
                android:id="@+id/cc_select_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:drawableLeft="@drawable/wenhao"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:minHeight="0dp"
                android:background="#eee"
                android:text="输入你正在找的宝贝"
                />
        </LinearLayout>

    </RelativeLayout>


</FrameLayout>
